// Function to fetch sensor data
function fetchSensorData($sensorUrl) {
    $ch = curl_init($sensorUrl);
    curl_setopt($ch, CURLOPT_HTTPHEADER, [
        'Authorization: Bearer ' . HOME_ASSISTANT_TOKEN,
        'Content-Type: application/json',
    ]);                                        /usr/local/bin/fetch_ha_sensor.php
    ]);
    curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
    curl_setopt($ch, CURLOPT_FAILONERROR, true);

    $response = curl_exec($ch);
    if (curl_errno($ch)) {
        echo 'Error:' . curl_error($ch);
    } else {
        $sensor_data = json_decode($response, true);
        return $sensor_data;
    }
    curl_close($ch);
}

// Define sensor URLs
$sensor_urls = [
    'energy_total' => "https://33d73ipserxnyyj9weae3lcmpoxx8omm.ui.nabu.casa/api/states/sensor.energy_total",
    'energy_current' => "https://33d73ipserxnyyj9weae3lcmpoxx8omm.ui.nabu.casa/api/states/sensor.energy_total",
    // Add more sensors as needed
];

// Fetch sensor data
$energy_total_data = fetchSensorData($sensor_urls['energy_total']);

// Database insertion
if ($energy_total_data && isset($energy_total_data['state'])) {
    $conn = new mysqli($db_config['servername'], $db_config['username'], $db_config['password'], $db_config['dbname']);

    if ($conn->connect_error) {
        die("Connection failed: " . $conn->connect_error);
    }

    $sql = "INSERT INTO daily_energy_totals (date, energy_total) VALUES (CURDATE(), ?)";
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("s", $energy_total_data['state']);
    if ($stmt->execute()) {
        echo "Successfully fetched and inserted energy_total value: " . $energy_total_data['state'] . PHP_EOL;
    } else {
        echo "Error inserting data: " . $conn->error . PHP_EOL;
    }

    $stmt->close();
    $conn->close();
} else {
    echo "Error: No valid 'energy_total' value fetched from the sensor." . PHP_EOL;
}
